/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}

 /* 遮罩层 */
.mask{
  width: 100%;
  height: 100%; /*宽高 100% 铺满屏幕 */
  background: #000;
  opacity: 0.5;
  z-index: 9000;
}
 
.modalDlg{
  width: 90%;
  height: 60%;
  z-index: 9900;  /* 要比遮罩层的大 */
  background-color: #FFA07A;
  border-radius: 30rpx;
  position: fixed; /* 生成绝对定位的元素，相对于浏览器窗口进行定位。 */
  top: 10%;
  left: 5%;  /* (100% - width)/2 */
}

image{
  width:80%;
  height:70%;
  position:relative;
  left: 10%;
  top:25px;
}
